    <div class="container">
        <h1>Korean Vocab Match <span>(í•œêµ­ì–´ ë‹¨ì–´ ë§žì¶”ê¸°)</span></h1>

        <div id="messageBox" class="message-box">Match the Korean word to the correct emoji!</div>

        <div class="game-info">
            <div>Score: <span id="score">0</span></div>
            <div>Level: <span id="level">1</span></div>
            <div>Correct in Level: <span id="correctInLevel">0</span>/<span id="levelGoal">10</span></div> <!-- Updated LEVEL_GOAL display -->
        </div>

        <!-- Initial Start Screen -->
        <div id="startScreen" class="start-screen">
            <label for="vocabLevelSelect">Choose Starting Level:</label>
            <select id="vocabLevelSelect">
                <option value="1">Level 1 (Basic)</option>
                <option value="2">Level 2 (Intermediate)</option>
                <option value="3">Level 3 (Advanced)</option>
            </select>
            <button id="startButton" style="margin-top: 20px;">Start Game</button>
        </div>

        <!-- Game Over Screen (initially hidden) -->
        <div id="gameOverScreen" class="game-over-screen">
            <h2 id="gameOverMessage"></h2>
            <p>Your Final Score: <span id="finalScore">0</span></p>
            <button id="playAgainButton">Play Again</button>
        </div>

        <!-- Main Game Elements (initially hidden or empty) -->
        <div class="korean-word-display" id="koreanWordDisplay"></div>
        <div class="emoji-grid" id="emojiGrid"></div>

    </div>

    <div class="container instructions">
        <h2>How to Play</h2>
        <ol>
            <li>Choose your starting vocabulary level using the dropdown.</li>
            <li>Click "Start Game" to begin.</li>
            <li>A Korean word will appear in the center.</li>
            <li>Below it, several emojis will be displayed. Click on the emoji that best represents the meaning of the Korean word.</li>
            <li>Get 10 correct answers in a row to advance to the next level.</li>
            <li>If you choose incorrectly, your "Correct in Level" counter resets, but your total score remains.</li>
            <li>The game continues as long as you keep matching words!</li>
            <li>Click "Play Again" after the game ends to start over.</li>
        </ol>
    </div>

    <script>
        // DOM Elements
        const koreanWordDisplay = document.getElementById('koreanWordDisplay');
        const emojiGrid = document.getElementById('emojiGrid');
        const scoreDisplay = document.getElementById('score');
        const levelDisplay = document.getElementById('level');
        const correctInLevelDisplay = document.getElementById('correctInLevel');
        const levelGoalDisplay = document.getElementById('levelGoal');
        const vocabLevelSelect = document.getElementById('vocabLevelSelect');
        const startButton = document.getElementById('startButton');
        const messageBox = document.getElementById('messageBox');
        const startScreen = document.getElementById('startScreen');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const gameOverMessage = document.getElementById('gameOverMessage');
        const finalScoreDisplay = document.getElementById('finalScore');
        const playAgainButton = document.getElementById('playAgainButton');


        // Game Variables
        let score = 0;
        let currentLevel = 1;
        const LEVEL_GOAL = 10; // Number of correct answers to advance level (Updated to 10)
        let correctAnswersInCurrentLevel = 0;
        let currentQuestion = null; // Stores the current word and its correct emoji
        let allEmojis = []; // All unique emojis from all vocab levels for incorrect options
        let currentLevelQuestions = []; // Stores the 10 unique questions for the current level
        let questionsAskedInCurrentRound = []; // Tracks questions already asked in the current 10-question round

        // Vocabulary Data (Korean Word, English Meaning, Associated Emoji)
        // Expanded and diversified vocabulary
        const vocabulary = {
            1: [ // Level 1: Basic words (10+ items)
                { word: "ì•ˆë…•í•˜ì„¸ìš”", meaning: "Hello", emoji: "ðŸ‘‹" },
                { word: "ê°ì‚¬í•©ë‹ˆë‹¤", meaning: "Thank you", emoji: "ðŸ™" },
                { word: "ë„¤", meaning: "Yes", emoji: "ðŸ‘" },
                { word: "ì•„ë‹ˆìš”", meaning: "No", emoji: "ðŸ‘Ž" },
                { word: "ì‚¬ëž‘", meaning: "Love", emoji: "â¤ï¸" },
                { word: "ì¹œêµ¬", meaning: "Friend", emoji: "ðŸ‘«" },
                { word: "ë¬¼", meaning: "Water", emoji: "ðŸ’§" },
                { word: "ë°¥", meaning: "Rice/Meal", emoji: "ðŸš" },
                { word: "ì±…", meaning: "Book", emoji: "ðŸ“š" },
                { word: "ì§‘", meaning: "House", emoji: "ðŸ " },
                { word: "ê³ ì–‘ì´", meaning: "Cat", emoji: "ðŸ±" },
                { word: "ê°œ", meaning: "Dog", emoji: "ðŸ¶" },
                { word: "ë¹¨ê°„ìƒ‰", meaning: "Red", emoji: "ðŸ”´" },
                { word: "íŒŒëž€ìƒ‰", meaning: "Blue", emoji: "ðŸ”µ" },
                { word: "ì›", meaning: "Circle", emoji: "âšª" },
            ],
            2: [ // Level 2: Intermediate (10+ items)
                { word: "í•™êµ", meaning: "School", emoji: "ðŸ«" },
                { word: "ìŒì•…", meaning: "Music", emoji: "ðŸŽ¶" },
                { word: "ì—¬í–‰", meaning: "Travel", emoji: "âœˆï¸" },
                { word: "ìžë™ì°¨", meaning: "Car", emoji: "ðŸš—" },
                { word: "ì»´í“¨í„°", meaning: "Computer", emoji: "ðŸ’»" },
                { word: "ì»¤í”¼", meaning: "Coffee", emoji: "â˜•" },
                { word: "ê³µë¶€", meaning: "Study", emoji: "âœï¸" },
                { word: "ë‚ ì”¨", meaning: "Weather", emoji: "â˜€ï¸" },
                { word: "ë³‘ì›", meaning: "Hospital", emoji: "ðŸ¥" },
                { word: "ì‹œìž¥", meaning: "Market", emoji: "ðŸ›ï¸" },
                { word: "ë‚¨ìž", meaning: "Man/Boy", emoji: "ðŸ‘¨" },
                { word: "ì—¬ìž", meaning: "Woman/Girl", emoji: "ðŸ‘©" },
                { word: "ì•„ê¸°", meaning: "Baby", emoji: "ðŸ‘¶" },
                { word: "ì´ˆë¡ìƒ‰", meaning: "Green", emoji: "ðŸŸ¢" },
                { word: "ì‚¼ê°í˜•", meaning: "Triangle", emoji: "ðŸ”º" },
            ],
            3: [ // Level 3: Advanced (10+ items)
                { word: "í–‰ë³µ", meaning: "Happiness", emoji: "ðŸ˜Š" },
                { word: "ìŠ¬í””", meaning: "Sadness", emoji: "ðŸ˜”" },
                { word: "ê¿ˆ", meaning: "Dream", emoji: "ðŸ’­" },
                { word: "ì‹œê°„", meaning: "Time", emoji: "â°" },
                { word: "ë¯¸ëž˜", meaning: "Future", emoji: "ðŸ”®" },
                { word: "ê³¼ê±°", meaning: "Past", emoji: "ðŸ”™" },
                { word: "í¬ë§", meaning: "Hope", emoji: "âœ¨" },
                { word: "í‰í™”", meaning: "Peace", emoji: "ðŸ•Šï¸" },
                { word: "ì„±ê³µ", meaning: "Success", emoji: "ðŸ†" },
                { word: "ì‹¤íŒ¨", meaning: "Failure", emoji: "âŒ" },
                { word: "í• ì•„ë²„ì§€", meaning: "Grandfather", emoji: "ðŸ‘´" },
                { word: "í• ë¨¸ë‹ˆ", meaning: "Grandmother", emoji: "ðŸ‘µ" },
                { word: "ê²€ì€ìƒ‰", meaning: "Black", emoji: "âš«" },
                { word: "í°ìƒ‰", meaning: "White", emoji: "âšª" },
                { word: "ì‚¬ê°í˜•", meaning: "Square", emoji: "ðŸŸ¥" },
            ]
        };

        // Collect all unique emojis for incorrect options
        function populateAllEmojis() {
            const tempSet = new Set();
            for (const levelKey in vocabulary) {
                vocabulary[levelKey].forEach(item => tempSet.add(item.emoji));
            }
            allEmojis = Array.from(tempSet);
        }

        // --- Game Initialization and Reset ---
        function initGame() {
            score = 0;
            currentLevel = parseInt(vocabLevelSelect.value); // Set initial level from dropdown
            correctAnswersInCurrentLevel = 0;
            questionsAskedInCurrentRound = []; // Reset asked questions
            updateDisplay();
            messageBox.textContent = "Match the Korean word to the correct emoji!"; // Initial instruction message

            // Hide game elements, show start screen
            koreanWordDisplay.style.display = 'none';
            emojiGrid.style.display = 'none';
            gameOverScreen.classList.remove('visible');
            startScreen.classList.remove('hidden');

            koreanWordDisplay.textContent = ""; // Ensure word display is empty
            emojiGrid.innerHTML = ''; // Clear emojis from grid

            populateAllEmojis(); // Ensure allEmojis is populated
        }

        // --- Start Game / Next Question Logic ---
        function startGame() {
            // Hide start screen, show game elements
            startScreen.classList.add('hidden');
            koreanWordDisplay.style.display = 'flex'; // Use flex to center content
            emojiGrid.style.display = 'grid';

            // Prepare questions for the current level
            currentLevelQuestions = [...vocabulary[currentLevel]]; // Copy vocab for the level
            questionsAskedInCurrentRound = []; // Reset for the new round/level

            generateQuestion();
        }

        function generateQuestion() {
            // Re-enable clicks on emojis for the new question
            Array.from(emojiGrid.children).forEach(optionDiv => {
                optionDiv.removeEventListener('click', handleAnswer); // Remove old listener
                optionDiv.classList.remove('correct', 'incorrect'); // Clear feedback styles
                optionDiv.addEventListener('click', handleAnswer); // Add new listener
            });

            // Filter out questions already asked in this round
            const availableQuestions = currentLevelQuestions.filter(q => !questionsAskedInCurrentRound.includes(q));

            if (availableQuestions.length === 0) {
                // All questions for this level have been asked
                messageBox.textContent = `Level ${currentLevel} complete! Advancing...`;
                setTimeout(advanceLevel, 1500);
                return;
            }

            // Select a random unasked question
            const randomIndex = Math.floor(Math.random() * availableQuestions.length);
            currentQuestion = availableQuestions[randomIndex];
            questionsAskedInCurrentRound.push(currentQuestion); // Mark as asked

            koreanWordDisplay.textContent = currentQuestion.word;
            messageBox.textContent = "Choose the matching emoji!"; // Prompt for the current question

            const options = [currentQuestion.emoji];
            const incorrectEmojis = allEmojis.filter(emoji => emoji !== currentQuestion.emoji);

            // Add 5 random incorrect emojis (or fewer if not enough unique ones)
            while (options.length < 6 && incorrectEmojis.length > 0) {
                const randomIncorrectIndex = Math.floor(Math.random() * incorrectEmojis.length);
                options.push(incorrectEmojis.splice(randomIncorrectIndex, 1)[0]);
            }

            options.sort(() => Math.random() - 0.5);

            emojiGrid.innerHTML = '';
            options.forEach(emoji => {
                const div = document.createElement('div');
                div.classList.add('emoji-option');
                div.textContent = emoji;
                div.dataset.emoji = emoji;
                div.addEventListener('click', handleAnswer);
                emojiGrid.appendChild(div);
            });
        }

        // --- Handle User Answer ---
        function handleAnswer(event) {
            // Disable all emoji clicks immediately after an answer
            Array.from(emojiGrid.children).forEach(optionDiv => {
                optionDiv.removeEventListener('click', handleAnswer);
            });

            const clickedEmoji = event.target.dataset.emoji;
            const isCorrect = (clickedEmoji === currentQuestion.emoji);

            // Visual feedback
            Array.from(emojiGrid.children).forEach(optionDiv => {
                if (optionDiv.dataset.emoji === currentQuestion.emoji) {
                    optionDiv.classList.add('correct');
                } else if (optionDiv.dataset.emoji === clickedEmoji && !isCorrect) {
                    optionDiv.classList.add('incorrect');
                }
            });

            if (isCorrect) {
                score++;
                correctAnswersInCurrentLevel++;
                messageBox.textContent = "Correct! ðŸŽ‰";
                updateDisplay();

                if (correctAnswersInCurrentLevel >= LEVEL_GOAL) {
                    // All 10 questions answered correctly for this level
                    messageBox.textContent = `Level ${currentLevel} complete! Advancing...`;
                    setTimeout(advanceLevel, 1500);
                } else {
                    setTimeout(generateQuestion, 1000); // Next question after short delay
                }
            } else {
                correctAnswersInCurrentLevel = 0; // Reset streak on incorrect answer
                messageBox.textContent = `Incorrect! The answer was "${currentQuestion.meaning}" (${currentQuestion.emoji}).`;
                updateDisplay();
                setTimeout(generateQuestion, 1500); // Next question after short delay
            }
        }

        // --- Level Progression ---
        function advanceLevel() {
            currentLevel++;
            if (vocabulary[currentLevel]) {
                correctAnswersInCurrentLevel = 0;
                questionsAskedInCurrentRound = []; // Reset for new level
                currentLevelQuestions = [...vocabulary[currentLevel]]; // Load new level's questions
                messageBox.textContent = `Welcome to Level ${currentLevel}!`;
                updateDisplay();
                generateQuestion();
            } else {
                // All levels completed!
                koreanWordDisplay.style.display = 'none';
                emojiGrid.style.display = 'none';
                messageBox.textContent = "Game Over!";
                gameOverMessage.textContent = "Congratulations! You completed all levels!";
                finalScoreDisplay.textContent = score;
                gameOverScreen.classList.add('visible');
            }
        }

        // --- Update UI Display ---
        function updateDisplay() {
            scoreDisplay.textContent = score;
            levelDisplay.textContent = currentLevel;
            correctInLevelDisplay.textContent = correctAnswersInCurrentLevel;
            levelGoalDisplay.textContent = LEVEL_GOAL;
        }

        // --- Event Listeners ---
        startButton.addEventListener('click', startGame);
        playAgainButton.addEventListener('click', initGame); // Play Again button for game over screen
        vocabLevelSelect.addEventListener('change', initGame); // Reset game if level is changed

        // Initialize the game on window load
        window.onload = function() {
            populateAllEmojis();
            initGame();
        };
    </script>
</body>
</html>
